#!/bin/bash

# Checksum: {{ include "dot_config/sketchybar/executable_sketchybarrc" | sha256sum }}

function show-header() {
  command -v gum &>/dev/null
  if [ $? -eq 0 ]; then
    gum style --border=double --align=left --padding "0 2" --width=75 $@
  else
    echo $@
  fi
}

# Reload aerospace configuration after changes
show-header "Sketchybar"
echo "Reloading sketchybar configuration"

# Reload sketchybar configuration after changes
sketchybar --reload
