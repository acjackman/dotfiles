# -*- mode: zsh -*- vim: ft=zsh

# ,jj - Jump (fd version)
#
# Pushd to an fzf-selected directory using fd

local items
if [[ -n "$1" && -d "$1" ]]; then
    items=$(fd . "$1" --type dir)
else
    items=$(fd . "$HOME" --type dir)
fi

local dir
dir=$(,j-fzf-picker "Jump to directory: " "$items")
[[ -n "$dir" ]] && pushd "$dir" >/dev/null
