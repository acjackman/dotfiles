#!/bin/bash

# Checksums of all hammerspoon files (dynamically generated):
# - init.lua.tmpl: {{ include "dot_config/hammerspoon/init.lua.tmpl" | sha256sum }}
{{- range glob "dot_config/hammerspoon/Spoons/*/init.lua" }}
# - {{ base (dir .) }}: {{ include . | sha256sum }}
{{- end }}

function show-header() {
  command -v gum &>/dev/null
  if [ $? -eq 0 ]; then
    gum style --border=double --align=left --padding "0 2" --width=75 $@
  else
    echo $@
  fi
}

# Reload hammerspoon configuration after changes
show-header "Hammerspoon"
echo "Reloading hammerspoon configuration"

# Reload hammerspoon if it's running
if pgrep -q Hammerspoon; then
  if command -v hs &>/dev/null && hs -c "hs.reload()" 2>/dev/null; then
    echo "✓ Hammerspoon reloaded successfully via CLI"
  elif osascript -e 'tell application "Hammerspoon" to reload end tell' 2>/dev/null; then
    echo "✓ Hammerspoon reloaded successfully via AppleScript"
  else
    echo "✗ Failed to reload Hammerspoon using both CLI and AppleScript"
    exit 1
  fi
else
  echo "⚠ Hammerspoon is not running (skipped reload)"
fi
