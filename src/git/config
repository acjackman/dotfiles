[alias]
    # Status & Info
    s = status -s
    home = rev-parse --show-toplevel
    hash = "!git rev-parse HEAD"
    hsh = "!git rev-parse --short HEAD"
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    bname = "branch-name"

    # Commit control
    a = "add"
    aa = "!git add $(git home)"
    ci = commit  # Commit Interactive
    cm = "commit -m"  # Commit with Message
    cem = "commit --allow-empty -m"
    fix = "commit --amend"
    fixx = "commit --amend --no-edit"
    cfix = fixx
    fixxa = "fixx --reset-author"
    ff = merge --ff-only
    patch = !git --no-pager diff --no-color

    # Branch control
    b = branch
    sw = switch
    co = checkout
    rh = reset --hard
    rhh = reset --hard HEAD
    cb = checkout -b
    ct = main
    main = "!f() { git show-ref --verify --quiet refs/heads/main && git checkout main || git checkout master; }; f"

    nb = checkout -b
    renb = branch -m

    # Worktree
    w  = worktree
    wa = worktree add
    wm = worktree move
    wd = worktree remove
    wh = hew-worktree

    # Remotes
    f = fetch
    ft = fetch
    fff = pull --ff-only
    l = pull
    u = push
    pl = pull
    ps = push
    psf = push --force-with-lease
    psu = push --set-upstream
    publish = "!git push -u origin $(git branch-name)"
    publishf = "publish --force-with-lease"
    pb = "publish"
    pbf = "publishf"
    remotes = remote -v

    # Log and History
    lf = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lg = lf --abbrev-commit --date=relative
    lg5 = "!git --no-pager lg -n 5"
    lgg = lg5
    lg10 = "!git --no-pager lg -n 10"
    graph = lg --graph

    # Ignore templates
    ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"

    # Hew
    hew-all = "!hew_all() { git branch | sed '/^\\*/d' | sed '/^\\+/d' | xargs -p git branch -D ;}; hew_all"
    hew-worktree = "!hew_worktree() { git worktree list | tail -n +2 | fzf -m | sed -E 's/[[:space:]].*//' | xargs --verbose -I _ git worktree remove _ ; }; hew_worktree"

[core]
    excludesfile = ~/.gitignore
    editor = "nvim -f"
    pager = delta

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
    trustExitCode = true

[merge]
    # tool = Kaleidoscope
    conflictstyle = diff3

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
    prompt = false

[mergetool]
    prompt = false

[diff]
    tool = Kaleidoscope
    compactionHeuristic = true

[user]
    email = adam@acjackman.com
    name = Adam Jackman

[push]
    default = simple
    autoSetupRemote = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
    helper = osxkeychain
[pull]
	rebase = true
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[init]
    defaultBranch = main

[includeIf "gitdir:~/dev/fulcrum/"]
    path = ~/.config/git/config-fulcrum

[includeIf "gitdir:~/dev/moov/"]
    path = ~/.config/git/config-moov

[includeIf "gitdir:~/github.com/moovfinancial/"]
    path = ~/.config/git/config-moov

[includeIf "gitdir:~/github.com/moov-io/"]
    path = ~/.config/git/moov

[hub]
    protocol = ssh

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

[github]
	user = acjackman
