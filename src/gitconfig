[alias]
    # Status & Info
    s = status -s
    branch-name = "!git rev-parse --abbrev-ref HEAD"

    # Commit control
    a = add .
    ci = commit  # Commit Interactive
    cm = "commit -m"  # Commit with Message
    cfix = "commit --amend --no-edit"
    ff = merge --ff-only

    # Branch control
    co = checkout
    rh = reset --hard
    rhh = reset --hard HEAD
    cb = checkout -b
    nb = checkout -b
    renb = branch -m

    # Remotes
    pl = pull
    ps = push
    psf = push --force-with-lease
    psu = push --set-upstream
    publish = "!git push -u origin $(git branch-name)"
    publishf = "publish --force-with-lease"
    pb = "publish"
    pbf = "publishf"
    remotes = remote -v

    # Log and History
    lf = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lg = lf --abbrev-commit --date=relative
    lg5 = "!git --no-pager lg -n 5"
    lg10 = "!git --no-pager lg -n 10"
    graph = lg --graph

    # Ignore templates
    ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[merge]
    tool = Kaleidoscope
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[mergetool]
    prompt = false
[diff]
    tool = Kaleidoscope
    compactionHeuristic = true
[user]
    email = adam@acjackman.com
    name = Adam Jackman
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore
    editor = subl -n -w
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
    helper = osxkeychain
