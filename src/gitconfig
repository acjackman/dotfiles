[alias]
    # Status & Info
    s = status -s
    home = rev-parse --show-toplevel
    hash = "!git rev-parse HEAD"
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    bname = "branch-name"

    # Commit control
    a = "add"
    aa = "!git add $(git home)"
    ci = commit  # Commit Interactive
    cm = "commit -m"  # Commit with Message
    fix = "commit --amend"
    fixx = "commit --amend --no-edit"
    cfix = fixx
    ff = merge --ff-only
    patch = !git --no-pager diff --no-color

    # Branch control
    sw = switch
    co = checkout
    rh = reset --hard
    rhh = reset --hard HEAD
    cb = checkout -b
    nb = checkout -b
    renb = branch -m

    # Remotes
    l = pull
    u = push
    pl = pull
    ps = push
    psf = push --force-with-lease
    psu = push --set-upstream
    publish = "!git push -u origin $(git branch-name)"
    publishf = "publish --force-with-lease"
    pb = "publish"
    pbf = "publishf"
    remotes = remote -v

    # Log and History
    lf = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lg = lf --abbrev-commit --date=relative
    lg5 = "!git --no-pager lg -n 5"
    lgg = lg5
    lg10 = "!git --no-pager lg -n 10"
    graph = lg --graph

    # Ignore templates
    ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustexitcode = true
[merge]
    tool = Kaleidoscope
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false
[mergetool]
    prompt = false
[diff]
    tool = Kaleidoscope
    compactionHeuristic = true
[user]
    email = adam@acjackman.com
    name = Adam Jackman
[push]
    default = simple
[core]
    excludesfile = ~/.gitignore
    editor = subl -n -w
	pager = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
    helper = osxkeychain
[pull]
	ff = only
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[init]
	defaultBranch = main
