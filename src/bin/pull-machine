#!/usr/bin/env zsh

BIN=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

pushd ~/.dotfiles
echo 'Updating dotfiles'
git pull
git submodule update --init --recursive
pushd ~
dotfiles-install
popd
popd

echo ""
echo "Installing Neovim plugins"
command -v nvim &>/dev/null && nvim --headless "+Lazy! restore" +qa
echo "Finished Installing Neovim plugins"
