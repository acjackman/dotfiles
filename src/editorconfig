# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go
[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size = 4

# Rego / OPA
[*.{rego}]
indent_style = tab
indent_size = 2

# Terraform
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Markdown
[*.md,*.markdown]
trim_trailing_whitespace = false
